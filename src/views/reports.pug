extends layout
block content

  .row
    .col-md-6.offset-md-3
      h2 Reported clips
      p (#{length} results)
      br
      each clip, index in clips
        if index != 0
          hr
        a#deleteBtn(onclick='deleteClip('+ clip.id +')')
         p.text-danger #[i.fa.fa-trash.mr-2] #{clip.reports} reports
        .row
          .col-md-4
            img.img-fluid(src='https://img.youtube.com/vi/' + clip.uid + '/hqdefault.jpg')
            br
            br
          .col-md-8
            h5
              a(href="/clip/"+clip.id) #{clip.title}
            if clip.score
              h5 #[i.fa.fa-star] #[strong #{clip.score}] #[small /5]
            else
              h5 #[i.fa.fa-star] ?
            p #{clip.descriptionShort}
